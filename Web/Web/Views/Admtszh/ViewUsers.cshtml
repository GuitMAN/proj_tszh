@using System.Collections.Generic;

@model IEnumerable<Web.Models.UserProfile>

@{
    ViewBag.Title = "ViewUsers";
//    Layout = "~/Views/Shared/_LayoutUk.cshtml";
}

<h3>Все пользователи</h3>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SurName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patronymic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Personal_Account)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apartment)
        </th>
        <td>
        </td>
</tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SurName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patronymic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Personal_Account)
        </td>
        <td>
            @Html.Action("get_adr", "User", new { id_adr = item.Adress })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apartment)
        </td>
        <td>
            <a href="#/edituser/@item.UserId">редактировать</a> |
            @*@Html.ActionLink("Details", "Details", new { id= item.UserId }) |*@
            @Html.ActionLink("Удалить", "DeleteUser", new { id=item.UserId })
</td>
    </tr>
}

</table>
