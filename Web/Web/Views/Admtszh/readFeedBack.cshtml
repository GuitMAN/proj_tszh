@model IEnumerable<Web.Models.feedback>

@{
    ViewBag.Title = "readFeedBack";
    Layout = "~/Views/Shared/_LayoutUk.cshtml";
}

<h2>readFeedBack</h2>


<table class="table" border="1">
    <tr>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_user)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.datetime)
        </th>
        <th>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
        @if (item.status)
        {
            @: + 
        } else
        { 
            @: - 
        }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            <div id="draggable">
                @item.id_user
            </div>
        </td>
        <td>
            @Html.Raw(item.message)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datetime)
        </td>
        <td> @Html.ActionLink("Удалить", "DelMess", new { id = item.id })</td>
</tr>
}

</table>

@section Scripts {
    @Styles.Render("~/Styles/jqueryui.min")
    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    @Scripts.Render("~/bundles/jqueryui.min")

    <script>
        $("#draggable").text()
    </script>
}