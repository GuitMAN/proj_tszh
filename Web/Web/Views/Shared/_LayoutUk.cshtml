<!DOCTYPE html>
<head>
<title>@ViewBag.Title</title>
<meta http-equiv="Content-Type" content="text/css; charset=UTF-8" />
 @Styles.Render("~/Styles/css")
    @Styles.Render("~/Styles/error")  
<script type="text/javascript" src="js/cufon-yui.js"></script>
<script type="text/javascript" src="js/arial.js"></script>
<script type="text/javascript" src="js/cuf_run.js"></script>
<script type="text/javascript" src="js/jquery-1.3.2.min.js"></script>
<script type="text/javascript" src="js/radius.js"></script>

</head>
<body>

<div class="login">
               
 	@Html.Partial("~/Views/Shared/_LayoutLogin.cshtml")

	</div>
<div class="main">

  <div class="header">
    <div class="header_resize">
	
      <div class="menu_nav">
        <ul>
        @Html.Action("Menu_main", "Nav")
        </ul>
      </div>
      <div class="logo"><h1><a>LOGO <small>наше лого, подпись и тд</small></a></h1></div>
    
	<div class="clr"></div>
      
      <div class="headertext">
        <h2>Read me first...</h2>
        
        
      </div>
    </div>
  </div>

  <div class="content">
    <div class="content_resize">
      <div class="mainbar">
        <div class="article">
          
        </div>
        <div class="article">
 @if (TempData["message"] != null)
            
{
                <div class="alert alert-success">@TempData["message"]</div>
            }
            
@RenderBody()
        </div>

        
      </div>
      <div class="gadget">
          
	@Html.Partial("_UserMenu")
        </div>
        
        
  <div class="footer">
    <div class="footer_resize">
      Все права защищены. CloudsSolution © 2015. 
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Админка","Index","Admin")
                    @: ссылка видна только пользователю с ролью "Admin"
                }
      <div class="clr"></div>
    </div>
  </div>
</div>
 @RenderSection("Scripts", required: false)
</body>
</html>
