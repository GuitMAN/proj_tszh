<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />

    @Styles.Render("~/Styles/css")
    @Styles.Render("~/Styles/error")
    
    @RenderSection("Scripts", required: false);
   
</head>

<body>
    <div class="main">
        <header>
            <div class="logo">
                LOGO
            </div>
            <div class="login">
                @Html.Partial("~/Views/Shared/_LayoutLogin.cshtml")
            </div>
        </header>
        <nav>
      
            <div class="topmenu">
                @Html.Partial("_UserMenu")
            </div> 
       
        <div class="l_menu">
            @Html.Action("Menu_main", "Nav")
        </div>
    </nav>
    <div class="content">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        @RenderBody()
    </div>
    <footer>
        <div class="footer">
            Все права защищены. CloudsSolution © 2015. 
            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink("Админка","Index","Admin")
                @: ссылка видна только пользователю с ролью "Admin"
            }
        </div>
    </footer>

</div>
</body>
</html>
