<!DOCTYPE html>

<html lang="ru" ng-app="HomeApp">

<head>
    @*<base href="/home">*@
    <meta charset="utf-8">
    <title>Business clean web templates</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <link href="~/Styles/themes/css/bootstrap.min.css" type="text/css" media="screen" id="callCss" rel="stylesheet" />
    <link href="~/Styles/themes/css/bootstrap-responsive.min.css" rel="stylesheet" type="text/css">
    <link href="~/Styles/themes/css/font-awesome.css" rel="stylesheet" type="text/css">
    <link href="~/Styles/themes/css/base.css" rel="stylesheet" type="text/css">
</head>

<body ng-controller="LoginInfoCtrl">
    <section id="headerSection">
        <div class="container">
            <div class="navbar">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <h1><a class="brand" href="#/"> Business <small>  Ltd.</small></a></h1>
                    <div class="nav-collapse collapse">
                        <ul class="nav pull-right">
                            <li class=""><a href="/">Home	</a></li>
                            @Html.Action("menu_top", "Nav")
                            <li class="dropdown" ng-show="Session.currentUser">
                                <a href="" class="dropdown-toggle" data-toggle="dropdown">Меню пользователя<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#/meters">Счетчики</a></li>
                                    <li><a href="#/feedback">Обратная связь</a></li>
                                    <li class=""><a href="#/profile">Профиль</a></li>
                                    <li class=""><a href="contact.html">Support</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--Header Ends================================================ -->

    <section id="bannerSection" style="background:url(../../Styles/themes/images/banner/contact.png) no-repeat center center #000;">
        <div class="container">
            <h1 id="pageTitle">
                Contact <small> :We love to hear from you</small>
                <span class="pull-right toolTipgroup">
                    <a href="#" data-placement="top" data-original-title="Find us on via facebook"><img style="width:45px" src="~/Styles/themes/images/facebook.png" alt="facebook" title="facebook"></a>
                    <a href="#" data-placement="top" data-original-title="Find us on via twitter"><img style="width:45px" src="~/Styles/themes/images/twitter.png" alt="twitter" title="twitter"></a>
                    <a href="#" data-placement="top" data-original-title="Find us on via youtube"><img style="width:45px" src="~/Styles/themes/images/youtube.png" alt="youtube" title="youtube"></a>
                </span>
            </h1>
        </div>
    </section>
    <!--Banner Ends================================================ -->
    <section id="bodySection" style="left: 0px">
        <div class="container">
            <div ng-if="Session.currentUser" class="row-fluid">
                Welcome, {{ Session.currentUser }}
                <a class="navbar-brand" href="#/logoout">Выйти</a>
            </div>
            <div ng-hide="Session.currentUser">
                <div ng-controller="LoginCtrl" class="row-fluid">
                    <div class="span6">
                        <form class="well form-inline">
                            @*@Html.AntiForgeryToken()*@
                            <input type="text" class="input-small" placeholder="Login" ng-model="credentials.username">
                            <input type="password" class="input-small" placeholder="Password" ng-model="credentials.password">
                            <label class="checkbox">
                                <input type="checkbox" ng-model="credentials.RememberMe">Запомнить
                            </label>
                            <button type="submit" class="btn" ng-click="login(credentials)">Войти</button>
                        </form>
                        <div class="row-fluid"><a href="#/register" class="dropdown-toggle">Регистрация</a></div>
                    </div>
                </div>
            </div>
            <hr class="soften">
            <div class="container">
                <div class="row">
                    @if (TempData["message"] != null)
            {
                        <div class="alert alert-success">@TempData["message"]</div>
                    }
                    <div class="span3">
                        <div class="well well-small">
                            <h3>Welcome!</h3>
                            We specialise in web design, web development and graphic design for different Desktop, Mobiles and Tablets.<br><br>

                            We recently introduce cheapest and best mobile web design packages in our services. This is most popular and beneficial for everyone.
                            If you are looking for upgrade your website computable in mobiles and tablets, Even if you don't have any website,
                            then just remember us and makes your dream success.<br><strong> We are giving the best solution for your best value of money.</strong>
                        </div>
                    </div>
                    @RenderBody()
                </div>
            </div>
        </div>
    </section>
    <!--Body Ends================================================ -->
    <footer>
        Все права защищены. CloudsSolution © 2015.
    </footer>

    @RenderSection("Scripts", required: false)

    <script src="~/Styles/themes/js/jquery-1.8.3.min.js"></script>
    <script src="~/Styles/themes/js/bootstrap.min.js"></script>
    <script src="~/Styles/themes/js/business_ltd_1.0.js"></script>

</body>

</html>
