<!DOCTYPE html>

<html lang="en" ng-app="HomeApp">
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <link href="~/Styles/bootstrap-dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Styles/app.css" rel="stylesheet" />
    
  </head>

<body ng-controller="HomeCtrl">
    <nav class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#/">ТСЖ</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#/">Главная</a></li>
                    <li><a href="#/about?id=Хуячечная">О Нас</a></li>
                    <li><a href="#/contact?id=Хуячечная">Контакты</a></li>
                </ul>
            </div><!-- /.nav-collapse -->
        </div><!-- /.container -->
    </nav><!-- /.navbar -->

            <div class="content">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-success">@TempData["message"]</div>
                }

                @RenderBody()
            </div>
        <footer>
            Все права защищены. CloudsSolution © 2015.
        </footer>
           

    @RenderSection("Scripts", required: false)
</body>
</html>
