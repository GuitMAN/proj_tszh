@model IEnumerable<Web.Models.Counter>

<div ng-controller="MetersCtrl">
    <h3>Все счетчики </h3>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfReview)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Measure)
            </th>
        </tr>
        <tr  ng-repeat="item in meters">
            <td>{{ item.Name }}</td>
            <td>{{ item.Serial }}</td>
            <td>{{ item.DateOfReview | JsonDate | date : 'dd-MM-y' }}</td>
            <td>{{ item.Status }}</td>
            <td>{{ item.Measure }}</td>
        </tr>


    </table>
    <hr>
<pre>{{meters | json}}</pre>
</div>